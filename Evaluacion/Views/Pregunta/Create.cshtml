@model Evaluacion.Models.Pregunta
@using Evaluacion.Models

@{
    ViewBag.Title = "Create";
    Examen examen = ViewBag.Examen;

}
<br />
<br />
<div class="row">
    <div class="col-md-6">
        <h2>Nueva Pregunta</h2>
        <hr />
    </div>
</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.Hidden("ExamenID", examen.ID);
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                @*@Html.ValidationMessage("ErrorNombre", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoPreguntaID, "Tipo de Pregunta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("TipoPreguntaID", null,"Seleccionar opción", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoPreguntaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Orden, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Orden, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Orden, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />
<br />
<div>
    @Html.ActionLink("Regresar Listado", "Index", "Pregunta", new { pExamenID = examen.ID },null)
</div>
