@model Evaluacion.Models.Examen
@using Evaluacion.Models

@{
    ViewBag.Title = "Create";
    Departamento departamento = ViewBag.Departamento;
}
<br />
<br />

<div class="row">
    <div class="col-md-6">
        <h2>Nuevo Examen</h2>
        <hr />
    </div>
</div>

<p>@departamento.Nombre</p>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("DepartamentoID", departamento.ID);
    
<div class="form-horizontal">
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.NombreExamen, "Nombre Examen", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.NombreExamen, new { @class = "form-control" })
            @Html.ValidationMessage("vmNombreExamen", "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.DepartamentoID, "Departamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("DepartamentoID", null,"-- Selecciona el Departamento --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartamentoID, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.IsLiberado, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsLiberado)
                @Html.ValidationMessageFor(model => model.IsLiberado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<br />
<br />
<div>
    @Html.ActionLink("Regresar a Listado", "Index")
</div>
