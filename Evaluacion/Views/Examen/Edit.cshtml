@model Evaluacion.Models.Examen

@{
    ViewBag.Title = "Edit";
}
<br />
<br />
<div class="row">
    <div class="col-md-6">
        <h2>Editar Examen</h2>
        <hr />
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.UsuarioAltaID)
    @Html.HiddenFor(model => model.FechaAlta)
    @Html.HiddenFor(model => model.DepartamentoID)


    <div class="form-group">
        @Html.LabelFor(model => model.NombreExamen, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.NombreExamen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreExamen, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        @Html.LabelFor(model => model.IsLiberado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsLiberado)
                @Html.ValidationMessageFor(model => model.IsLiberado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<br />
<br />
<div>
    @Html.ActionLink("Regresar a Listado", "Index")
</div>
